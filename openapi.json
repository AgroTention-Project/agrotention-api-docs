{
  "openapi": "3.0.3",
  "info": {
    "title": "AgroTention API",
    "version": "dev-0.1.0",
    "description": "AgroTention App Backend RESTFul API"
  },

  "security": [
    {
      "JWT": []
    }
  ],

  "tags": [
    {
      "name": "users",
      "description": "Endpoint untuk pengelolaan data user"
    }
