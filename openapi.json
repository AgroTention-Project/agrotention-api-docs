  "paths": {
    "/": {
      "description": "Root",
      "get": {
        "summary": "Root",
        "responses": {
          "200": {
            "description": "OK | Berhasil fetch root",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "routes": {
                      "type": "object",
                      "properties": {
                        "/docs": {
                          "type": "string"
                        },
                        "/users": {
                          "type": "string"
                        },
                        "/scan": {
                          "type": "string"
                        },
                        "/results": {
                          "type": "string"
                        },
                        "/datasets": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },

          "401": {
            "description": "UNAUTHORIZED | User yang tidak terdaftar atau tidak login mencoba mengakses endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          }
        }
      }
    },

    "/users": {
      "get": {
        "tags": ["users"],

        "summary": "Mendapatkan list users",

        "description": "Endpoint ini menampilkan daftar users aktif. Filter daftar user dengan query param.",

        "responses": {
          "200": {
            "description": "OK | Berhasil mendapatkan list users",

            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "userId": {
                        "type": "string",
                        "example": "01930d05-1181-7ebe-9b7b-0c9abf0367bc"
                      },

                      "username": {
                        "type": "string",
                        "example": "johndoe123"
                      },

                      "fullName": {
                        "type": "string",
                        "example": "John Doe"
                      },

                      "isExpert": {
                        "type": "boolean",
                        "example": false
                      }
                    }
                  }
                }
              }
            }
          },

          "401": {
            "description": "UNAUTHORIZED | User belum login dan tidak memiliki JWT",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          },

          "404": {
            "description": "NOT FOUND | User dengan kategori pada query param tidak ditemukan atau belum ada user terdaftar",

            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "user tidak ditemukan"
                    }
                  }
                }
              }
            }
          },

          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
    },

    "/users/{userId}": {
      "post": {
        "tags": ["users"],

        "summary": "Melengkapi data user",

        "description": "Setelah mendaftar via google/facebook oauth, user melengkapi data umum ke endpoint ini. Hanya user yang belum memiliki data tambahan",

        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",

                "properties": {
                  "firstName": {
                    "type": "string",
                    "example": "Asep"
                  },

                  "lastName": {
                    "type": "string",
                    "example": "Jupri"
                  }
                },

                "required": ["firstName"]
              }
            }
          }
        },

        "responses": {
          "200": {
            "description": "OK | Berhasil menambahkan data user"
          },

          "400": {
            "description": "BAD REQUEST | User memasukkan data yang invalid"
          },

          "401": {
            "description": "UNAUTHORIZED | User yang tidak terdaftar atau tidak login mencoba mengakses endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          },

          "403": {
            "description": "FORBIDDEN | User mencoba mengubah data user lain. User dengan data tambahan yang sudah diisi juga akan mendapatkan error ini.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "forbidden"
                    }
                  }
                }
              }
            }
          },

          "404": {
            "description": "FORBIDDEN | User dengan userId tidak ditemukan. Error ini saat admin mencoba mengganti data user tetapi userId tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "user {userId} tidak ditemukan"
                    }
                  }
                }
              }
            }
          },

          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",

            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      },

      "get": {
        "tags": ["users"],

        "summary": "Mendapatkan detail user berdasarkan userId",

        "description": "",

        "responses": {
          "200": {
            "description": "OK | Berhasil mendapatkan data user"
          },

          "401": {
            "description": "UNAUTHORIZED | User yang tidak terdaftar atau tidak login mencoba mengakses endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
