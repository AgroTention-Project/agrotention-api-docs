    "/scan": {
      "post": {
        "tags": ["Scan", "POST"],
        "summary": "Memindai gambar",
        "description": "Endpoint ini digunakan untuk memindai gambar yang dikirimkan melalui request body. Gambar akan dianalisis dan hasilnya dikembalikan dalam response.",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Gambar yang akan dipindai"
                  }
                },
                "required": ["image"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK | Berhasil memindai gambar",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "scanResult": {
                      "type": "object",
                      "description": "Hasil pemindaian gambar",
                      "properties": {
                        "detectedObject": {
                          "type": "string",
                          "example": "Tomato Plant"
                        },
                        "confidence": {
                          "type": "number",
                          "format": "float",
                          "example": 0.98
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST | Gambar tidak valid atau format tidak sesuai",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "gambar tidak valid"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED | User yang tidak terdaftar atau tidak login mencoba mengakses endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          },
          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
    },

    "/results": {
      "get": {
        "tags": ["Results", "GET"],
        "summary": "Menampilkan hasil pemindaian gambar",
        "description": "Endpoint ini menampilkan hasil dari pemindaian gambar yang sebelumnya dikirim ke endpoint /scan.",
        "parameters": [
          {
            "name": "scanId",
            "in": "query",
            "required": true,
            "description": "ID pemindaian untuk mengambil hasil spesifik",
            "schema": {
              "type": "string",
              "example": "abc123xyz"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK | Berhasil mendapatkan hasil pemindaian",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "scanResult": {
                      "type": "object",
                      "description": "Hasil pemindaian gambar",
                      "properties": {
                        "detectedObject": {
                          "type": "string",
                          "example": "Tomato Plant"
                        },
                        "confidence": {
                          "type": "number",
                          "format": "float",
                          "example": 0.98
                        },
                        "timestamp": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-11-11T12:34:56Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST | scanId tidak valid atau tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "scanId tidak valid atau tidak ditemukan"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED | User yang tidak terdaftar atau tidak login mencoba mengakses endpoint",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          },
          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
    },
    "/result/{resultId}": {
      "get": {
        "tags": ["Results", "GET"],
        "summary": "Menampilkan hasil pemindaian berdasarkan resultId",
        "description": "Endpoint ini menampilkan hasil spesifik dari pemindaian gambar berdasarkan resultId.",
        "parameters": [
          {
            "name": "resultId",
            "in": "path",
            "required": true,
            "description": "ID hasil pemindaian untuk mendapatkan detail hasil tertentu",
            "schema": {
              "type": "string",
              "example": "xyz789abc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK | Berhasil mendapatkan detail hasil pemindaian",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "scanResult": {
                      "type": "object",
                      "description": "Detail hasil pemindaian gambar",
                      "properties": {
                        "detectedObject": {
                          "type": "string",
                          "example": "Tomato Plant"
                        },
                        "confidence": {
                          "type": "number",
                          "format": "float",
                          "example": 0.98
                        },
                        "timestamp": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-11-11T12:34:56Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND | resultId tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "resultId tidak ditemukan"
                    }
                  }
                }
              }
            }
          }
        }
      },

      "delete": {
        "tags": ["Results", "DELETE"],
        "summary": "Menghapus hasil pemindaian berdasarkan resultId",
        "description": "Endpoint ini menghapus hasil pemindaian tertentu berdasarkan resultId.",
        "parameters": [
          {
            "name": "resultId",
            "in": "path",
            "required": true,
            "description": "ID hasil pemindaian untuk menghapus hasil tertentu",
            "schema": {
              "type": "string",
              "example": "xyz789abc"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK | Hasil pemindaian berhasil dihapus",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Hasil pemindaian berhasil dihapus"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND | resultId tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "resultId tidak ditemukan"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "UNAUTHORIZED | User tidak memiliki izin untuk menghapus data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedError"
                }
              }
            }
          },
          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
    },

    "/result/{resultId}/rate": {
      "post": {
        "tags": ["Results", "POST"],
        "summary": "Memberikan rating pada hasil pemindaian",
        "description": "Endpoint ini memungkinkan pengguna untuk memberikan rating pada hasil pemindaian gambar berdasarkan resultId.",
        "parameters": [
          {
            "name": "resultId",
            "in": "path",
            "required": true,
            "description": "ID hasil pemindaian untuk diberikan rating",
            "schema": {
              "type": "string",
              "example": "xyz789abc"
            }
          }
        ],
        "requestBody": {
          "description": "Payload untuk memberikan rating",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "rating": {
                    "type": "integer",
                    "description": "Rating yang diberikan pada hasil pemindaian",
                    "example": 4,
                    "minimum": 1,
                    "maximum": 5
                  }
                },
                "required": ["rating"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK | Rating berhasil ditambahkan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Rating berhasil ditambahkan"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "resultId": {
                          "type": "string",
                          "example": "xyz789abc"
                        },
                        "rating": {
                          "type": "integer",
                          "example": 4
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "BAD REQUEST | Permintaan tidak valid atau rating berada di luar rentang yang diizinkan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "Rating harus antara 1 hingga 5"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "NOT FOUND | resultId tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": false
                    },
                    "error": {
                      "type": "string",
                      "example": "resultId tidak ditemukan"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "INTERNAL SERVER ERROR | Error pada server",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "UserAdditionalInfo": {
        "type": "object",
        "properties": {
          "isAdmin": {
            "type": "boolean",
            "default": false
          },
          "isExpert": {
            "type": "boolean",
            "default": false
          },
          "company": {
            "type": "string",
            "example": "Universitas A"
          },
          "roleAtCompany": {
            "type": "string",
            "example": "student"
          }
        },
        "required": ["isAdmin", "isExpert"]
      },
      "InternalError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "unhandeled client error"
          }
        }
      },
      "UnauthorizedError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "unauthorized"
          }
        }
      }
    },

    "securitySchemes": {
      "JWT": {
        "description": "JSON Web Token dari firebase",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
