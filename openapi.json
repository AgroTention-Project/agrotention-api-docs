          "404": {
            "description": "FORBIDDEN | User dengan userId tidak ditemukan. Error ini saat admin mencoba mendapatkan data user tetapi userId tidak ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "user {userId} tidak ditemukan"
                    }
                  }
                }
              }
