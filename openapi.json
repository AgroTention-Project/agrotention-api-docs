          "500": {
            "description": "INTERNAL SERVER ERROR | Error server tidak di ekspos",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InternalError"
                }
              }
            }
          }
        }
      }
